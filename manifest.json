{
  "manifest_version": 3,
  "name": "SimpleNav",
  "version": "1.0",
  "description": "Remove unwanted DOM elements from specific websites using custom CSS selectors",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "simplenav-no-reply@qfortress.com",
      "data_collection_permissions": {
        "required": ["none"]
      },
      "strict_min_version": "109.0"
    }
  }
}